
@{
    ViewBag.Title = "Edicao";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Atualizar Estoque</h2>
<hr />


@model Projeto.Presentation.Models.EstoqueEdicaoModel

@using (Html.BeginForm())

{
    @Html.HiddenFor(model => model.IdEstoque)

    <label> Nome do Estoque:</label>
    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control col-md-3" })

    <span>
        @Html.ValidationMessageFor(model => model.Nome)
    </span>

    <br />

    <input type="submit" value="Atualizar" class="btn btn-warning" />



    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Atenção!</strong> <p>  @TempData["Mensagem"] </p>
    </div>


}







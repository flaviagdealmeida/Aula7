
@{
    /**/

    Layout = "~/Views/Shared/Layout.cshtml";
}


<h2>Cadastrar Novo Estoque</h2>
<hr />


@model  Projeto.Presentation.Models.EstoqueCadastroModel





@using (Html.BeginForm())
{
    <label>Nome do Estoque:</label>
    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control col-md-4" })


    <br />

    <p>

        <input class="btn btn-primary" type="submit" value="Cadastrar Estoque" />

    </p>




}
    @{
        try
        {

            if (TempData["Mensagem"].ToString() != "")
            {
                <div class="alert alert-dismissible alert-success">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>Atenção!</strong> <p>  @TempData["Mensagem"] </p>
                </div>
            }
        }
        catch { }
    }




